<div class="container">
  <h2>Add a new channel</h2>

  <%= simple_form_for @channel, url: contributor_channels_path do |f| %>
    <div class="form-inputs">
      <div class="input-field">
        <%= f.input :title %>
      </div>
      <div class="input-field">
        <%= f.input :description, input_html: {class: "materialize-textarea"} %>
      </div>
      <div class="input-field">
        <%= f.input :cost, input_html: {class: "validate", type: "number", min: "0"} %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :button, "Add", class: "waves-effect waves-light btn" %>
    </div>
  <% end %>
</div>
